@model ProjectJMM.Models.Item
<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pe-lg-3">Add Item</h2>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ItemName"></label>
                        </div>
                    <div class="col-4">
                        <label asp-for="Borrow"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="lender"></label>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ItemName" class="form-control"/>
                      
                    </div>
                    <div class="col-4">
                        <input asp-for="Borrow" class="form-control" />

                    </div>
                    <div class="col-4">
                        <input asp-for="lender" class="form-control" />

                    </div>
                </div>
                <div class="from-group row">
                    <div class="col-8 ofset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-success w-70" value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-75">Back</a>
                        </div>
                    </div>
                </div>

                
            </div>
        </div>
    </div>
</form>
